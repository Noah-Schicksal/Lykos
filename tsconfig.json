{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "dist/src",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts"
  ]
}